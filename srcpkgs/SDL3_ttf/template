# Template file for 'SDL3_ttf'
pkgname=SDL3_ttf
version=3.2.2
revision=1
build_style=cmake
configure_args="-DSDLTTF_VENDORED=OFF"
makedepends="SDL3-devel freetype-devel harfbuzz-devel"
short_desc="Use TrueType fonts in your SDL 3.x applications"
maintainer="Orphaned <orphan@voidlinux.org>"
license="Zlib"
homepage="https://github.com/libsdl-org/SDL_ttf"
changelog="https://raw.githubusercontent.com/libsdl-org/SDL_ttf/refs/heads/main/CHANGES.txt"
distfiles="https://github.com/libsdl-org/SDL_ttf/releases/download/release-${version}/SDL3_ttf-${version}.tar.gz"
checksum=63547d58d0185c833213885b635a2c0548201cc8f301e6587c0be1a67e1e045d

post_install() {
	vlicense LICENSE.txt
}

SDL3_ttf-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/*.so
		vmove usr/lib/cmake
	}
}
